<!DOCTYPE html>
<html>
  <head>
    <title>Movie API</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="icon" type="image/png" href="/images/favicon.ico" sizes="16x16">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Sono&display=swap" rel="stylesheet">
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <div class="logo">
        <h2>Movie API</h2>
      </div>
      <nav>
        <ul class="nav-links">
          <li><a target="_blank"  href="/docs">API Documentation</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <!-- <div class="hero-image">
        <img src="/images/img1.jpg" alt="" />
      </div> -->
      <% if (message) { %>
      <div id="message" class="message">
        <p><%= message %></p>
      </div>
      <% } %>
      <div class="form-container">
        <h2>Sign up for access to the API</h2>
        <form style="height: 62vh;"action="/token" method="POST">
          <label for="name">Name</label>
          <input type="text" id="name" name="username" required />
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
          <label for="use">Intended Use</label>
          <input type="text" id="use" name="use" required />
          <button type="submit">Sign up</button>
        </form>
      </div>
    </main>
    <footer>
      <p>&copy; 2023 Movie API. All Rights Reserved.</p>
    </footer>

    <script>
      setTimeout(() => {
        const message = document.getElementById('message')
        message.style.display = 'none'
      }, 1000)
    </script>
  </body>
</html>
